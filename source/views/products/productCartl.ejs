<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head', { title }) %>
</head>

<header>
    <%- include('../partials/header', { title }) %>
</header>

<body>
    <main>

        <!-- CON SEQUELIZE -->
        
            <% if (product.images && product.images.length > 0) { %>
                <% product.images.forEach(image => { %>
                    <img src="/<%= image.imageUrl %>" alt="<%= product.name %>" class="img-producto"">
                <% }) %>
            <% } else { %>
                <p>No hay imágenes disponibles para este producto.</p>
            <% } %>
        

            <% if (product.description && product.description.length > 0) { %>
                <div>
                  <p class="nombre__descripcion"><%= product.name %></p>
                  <p class="description"><%= product.description %></p>
                </div>
              <% } else { %>
                <p>No hay descripción disponible para este producto.</p>
              <% } %>
              

          <!--SIN SEQUELIZE -->
        <!-- <p class="description" id="description">< product.ingredientes.join(', ') %></p> -->
        <!-- <p class="description" id="description">< product.ingredientes %></p> -->

        <div class="contador"> 
            <button class="boton">$<%= product.price %></button>
            <button class="boton" onclick="decrementar()">-</button> 
            <button class="boton" onclick="incrementar()">+</button>
            <!-- <button class="boton">5%</button> -->
        </div>
        <div class="contador_total">
            <h4 class="cantidad">Cantidad:</h4>
            <span id="precio-total">$<%= product.price %></span>
            <div class="precio__total">
            <h4 class="costo">Precio:</h4>
                <span id="valor" class="contador__valor">0</span> <!-- Valor inicial -->
            </div>
        </div>
        
        <a href="/products" class="b-back">Volver al listado</a>
    </main>

    <script src="/javascripts/productCartl.js"></script>

</body>
</html>
