<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head', { title }) %>
</head>

<header>
    <%- include('../partials/header', { title }) %>
</header>

<body>
    <main>
        <div class="img_productEspecific">
            <% if (product.images && product.images.length > 0) { %>
                <% product.images.forEach(image => { %>
                    <img src="/<%= image.imageUrl %>" alt="<%= product.name %>" class="img_productEspecific__img">
                <% }) %>
            <% } else { %>
                <p>No hay im√°genes disponibles para este producto.</p>
            <% } %>
            
            <!-- CON SEQUELIZE -->

            <% if (product.ingredients && product.ingredients.length > 0) { %>
                <div class="description_productEspecific">
                        <p class="nombre__descripcion"><%= product.name %></p>
                    <h3 class="h3__descripcion">Ingredientes</h3>
                    <ul >
                        <% product.ingredients.forEach(ingredient => { %>
                            <p class="p__ingredientes"><%= ingredient.name %></p>
                            <% }) %>
                            <p>$<%= product.price %></p>
                    </ul>
                        <% } else { %>
                            <p>No hay ingredientes disponibles.</p>
                        <% } %>

                </div>

            <!--Sin sequelize-->    
            
            <!-- <img src="/ product.imagen %>" alt="< product.nombre %>" class="img_productEspecific__img"> -->
